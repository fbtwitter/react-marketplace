[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,jsx}]
charset = utf-8

# Indentation override for all JS under src directory
[src/*.{js,jsx}]
indent_style = space
indent_size = 2

[src/**.{scss,sass}]
indent_style = space
indent_size = 2

[**.{json}]
indent_style = space
indent_size = 2
